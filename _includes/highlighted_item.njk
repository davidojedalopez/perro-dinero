<a href="{{ item.data.external_url if item.data.external_content else item.url | url }}" target="{{ 'blank' if item.data.external_url else '_self' }}" class="hover:bg-accent-100 dark:hover:bg-foreground-dark no-underline flex flex-col rounded-lg shadow-xl dark:shadow-xl-dark overflow-hidden no-hyphens">
    <div class="flex-shrink-0">
        {% image item.data.cover_path | url, item.data.cover_alt, false, '', 'eager', 'h-72 w-full object-cover' %}
    </div>
    <div class="flex-1 bg-foreground-dark dark:bg-primary-dark p-6 flex flex-col justify-between">
        <div class="flex-1">
            <p class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800"> {{ item.data.type | title }} </p>
            <div class="block mt-2">
                <h2 class="font-semibold dark:text-green-700 text-yellow-500">{{ item.data.title }}</h2>
                <p class="mt-3 text-base text-white dark:text-background-dark">{{ item.data.description }}</p>
            </div>
        </div>
        <div class="mt-6 flex items-center">
            <div class="">
                <div class="flex text-base space-x-1 dark:text-green-800 text-yellow-500">
                    <time datetime="{{ item.data.published_at | htmlDateString }}">{{ item.data.published_at | readableDate }}</time>
                    {% if not item.data.external_content %}
                        <span aria-hidden="true"> &middot; </span>
                        <p> Lectura de {{ item | readingTime }} </p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</a>