---
layout: layouts/base.njk
permalink: "posts/{{ page.fileSlug }}/"
---

<article class="py-8">
  {% if cover_path %}
    <div class="mb-4 gradient-background rounded mx-auto w-full max-w-screen-sm h-auto">
      <img src="{{ cover_path | url }}" alt="{{ cover_alt }}" class="relative -z-1" />
    </div>
  {% endif %}
  <h1 class="text-accent-500 font-black text-4xl md:text-5xl">{{ title }}</h1>
  <time class="text-base text-accent-600" datetime="{{ published_at | htmlDateString }}">{{ published_at | readableDate }}</time> <span class="px-2 text-base text-accent-600">Â·</span> <span class="text-base text-accent-600">Lectura de {{ content | readingTime }}</span>
  
  <div class="mt-8">
    {{ content | safe }}
  </div>

  <div id="disqus_thread" class="mt-8"></div>
  <script>
    document.addEventListener('DOMContentLoaded', (event) => {
      var disqus_config = function () {
        this.page.url = "https://perrodinero.blog{{ page.url | url }}";
        this.page.identifier = "{{ page.url | url }}";
      };
      
      (function() {
      var d = document, s = d.createElement('script');
      s.src = 'https://perrodinero.disqus.com/embed.js';
      s.setAttribute('data-timestamp', +new Date());
      (d.head || d.body).appendChild(s);
      })();
    });    
  </script>
  <noscript>Habilita JavaScript para ver los <a href="https://disqus.com/?ref_noscript">comentarios</a>.</noscript>
                              
  <div class="flex flex-col mt-16 p-4 bg-gray-200 rounded">
    <p class="opacity-75">Otros posts que pueden interesarte:</p>
    {% set post = collections.posts | getPreviousCollectionItem(page) %}
    {% if post %}
        {% include "postitem_no_description.njk" %}
    {% endif %}

    {% set post = collections.posts | getNextCollectionItem(page) %}
    {% if post %}
        {% include "postitem_no_description.njk" %}
    {% endif %}
  </div>

</article>